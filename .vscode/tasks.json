{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "build",
      "problemMatcher": ["$rustc"],
      "group": "build",
      "label": "rust: cargo build"
    },
    {
      "type": "cargo",
      "command": "run",
      "args": ["--example", "simple"],
      "problemMatcher": ["$rustc"],
      "label": "rust: cargo run --example simple",
      // "env": {
      //   "RUST_BACKTRACE": "1"
      // },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
